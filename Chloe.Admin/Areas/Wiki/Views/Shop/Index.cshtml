@{
    ViewBag.Title = "Index";
}
@Html.Partial("Index_js")
<div style="width:100%;">
    <div class="topPanel">
        <div class="toolbar">
            <a class="a-btn-refresh" onclick="$ace.reload()"></a> 
            <button class="a-btn-add" onclick="window.location.href='/Wiki/Shop/Add'">添加</button>
            <button class="a-btn-delete" data-bind="click:del,disable:!dataTable.selectedModel()">删除</button>
        </div>
        <div class="search">
            <table class="form-table" style="width:500px;">
                <tr>
                    <td style="width:100px;">
                        <select class="a-control" data-bind="options:_sorts,optionsText:'Title',optionsValue:'Id',optionsCaption:'--选择品牌--',value:searchModel().BrandID">
                            <option value="0">--选择品牌--</option>
                        </select>
                    </td>
                    <td>
                        <input type="text" class="a-control" placeholder="请输入要查询关键字" style="width: 200px;" data-bind="value:searchModel().keyword">
                    </td>
                    <td>
                        <button type="button" class="a-btn-search" data-bind="click:search"></button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div>
        <table class="table table-hover" data-bind="with:dataTable">
            <thead>
                <tr>
                    <th style="width:30px;"></th>
                    <th style="width:200px;">Id</th>
                    <th>标题</th>
                    <th>分类</th>
                    <th>电话</th>
                    <th>网址</th>
                    <th>经度纬度</th>
                    <th>地址</th>
                </tr>
            </thead>
            <tbody data-bind="foreach:models">
                <tr data-bind="click:$parent.selectRow">
                    <td data-bind="text:$parent.getOrdinal($index())"></td>
                    <td data-bind="text:ID"></td>
                    <td>
                        <a data-bind="text:ShopName,attr:{href:'@Url.Content("~/Wiki/Shop/Edit?ID=")' + ID()}"></a>
                    </td>
                    <td data-bind="text:$ace.findName(_sorts,BrandID(),'Id','Title')"></td>
                    <td data-bind="text:ShopTel"></td>
                    <td data-bind="text:ShopUrl"></td>
                    <td data-bind="text:GPS_X"></td>
                    <td data-bind="text:ShopAddress"></td>
                </tr>
            </tbody>
            @Html.Partial("_tfoot")
        </table>
    </div>
</div>